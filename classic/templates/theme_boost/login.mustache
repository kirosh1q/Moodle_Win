{{!
    @template theme_boost/login (overridden by theme_classic)
}}
{{> theme_boost/head }}

<body {{{ bodyattributes }}}>
{{> core/local/toast/wrapper}}

<div id="page-wrapper">

    {{{ output.standard_top_of_body_html }}}

    <div id="page" class="container-fluid pt-5 mt-0">
        <div id="page-content" class="row">
            <div id="region-main-box" class="col-12">
                <div id="region-main" class="col-12 h-100">
                <div class="login-wrapper" style="display:flex;align-items:center;justify-content:center;min-height:calc(100vh - 4rem);">
                    <div class="login-container" style="background:#ffffff;border-radius:16px;padding:32px;box-shadow:0 12px 40px rgba(0,0,0,.15);max-width:420px;width:100%;">
                    {{{ output.main_content }}}
                    </div>
                </div>
                </div>
            </div>
        </div>
    </div>
    {{> theme_boost/footer }}
</div>

</body>
</html>
{{#js}}
M.util.js_pending('theme_boost/loader');
require(['theme_boost/loader'], function() {
  M.util.js_complete('theme_boost/loader');
});
{{/js}}


